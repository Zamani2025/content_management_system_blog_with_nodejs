<h1>Create Category</h1>
<div class="row">
    <div class="col-sm-4">
        <form action="/admin/categories" method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" placeholder="Enter title" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-primary">Create Category</button>
        </form>
    </div>
</div>

<br/>
<hr/>
<br/>

<h1>Categories</h1>
<div class="row">
    <div class="col-sm-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{name}}</td>
                        <td><a href="/admin/categories/edit-category/{{slug}}"><i class="fa fa-edit"></i></a></td>
                        <td>
                            <form action="/admin/categories/delete/{{slug}}?method=DELETE" method="post">
                                <button type="submit" style="border: none; color: red; cursor: pointer;"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
