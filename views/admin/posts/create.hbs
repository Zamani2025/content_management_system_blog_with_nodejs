<h1>Create Post</h1>
<a href="/admin/posts" class="btn btn-primary mb-3">Back to all posts</a>
<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" placeholder="Title" class="form-control" id="">
    </div>
    <div class="form-group">
        <label for="file">File</label>
        <input type="file" name="file" class="form-control" id="">
    </div>
    <div class="form-group">
        <label for="status">Category</label>
        <select name="category" class="form-control" id="">
            <option selected  disabled>Choose an option</option>
            {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" class="form-control" id="">
            <option selected disabled>Choose an option</option>
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="from-group">
        <label for="allowComments" class="form-check-label">
            <input type="checkbox" name="allowComments" class="form-check-input">
            Allow Comments
        </label>
    </div>
    <div class="form-group">
        <label for="body">Description</label>
        <textarea name="body" id="" placeholder="Description" class="form-control" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Create Post</button>
</form>