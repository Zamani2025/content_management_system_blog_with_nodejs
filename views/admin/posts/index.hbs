<h1>All Posts</h1>
<a href="/admin/posts/create" class="btn btn-primary mb-3">Back to create posts</a>

<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>File</th>
            <th>Category</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{title}}</td>
            <td><img width="50" src="/upload/{{file}}" alt="post_file"></td>
            <td>{{category.name}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateDate createdAt 'Do MMM YYYY'}}</td>
            <td><a href="/admin/posts/edit-post/{{_id}}"><i class="fa fa-edit"></i></a></td>
            <td>
                <form action="/admin/posts/delete/{{_id}}?method=DELETE" method="post">
                    <button type="submit" style="border: none; color: red; cursor: pointer;"><i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table></div>