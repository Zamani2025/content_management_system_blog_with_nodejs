<h1>Comments</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Owner</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{_id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{generateDate createdAt 'Do MMM YYYY'}}</td>
            <td>
                <form action="/admin/comments?method=DELETE" method="post">
                    <button type="submit" style="border: none; color: red;"><i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>